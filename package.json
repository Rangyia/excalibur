{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "server": "clear && lerna --scope=@excalibur/server run dev",
    "start": "clear && cd packages/server && yarn start",
    "postinstall": "clear && cd packages/server && yarn build",
    "deploy": "clear && git add . && git commit -m 'New configuration for heroku deployment' && git push -u origin main"
  },
  "devDependencies": {
    "lerna": "^5.1.2"
  }
}
